def letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"

fun IsLetter(char) {
    for (def pos = 0; pos < len(letters); pos + 1) {
        if letters[pos] == char {
            return true
        }
    }

    return false
}

def numbers = "0123456789"

fun IsNumber(number) {
    for (def pos = 0; pos < len(numbers); pos + 1) {
        if numbers[pos] == number {
            return true
        }
    }

    return false
}

def VARIABLE = 0
def NUMBER = 1

fun Lexer(code) {
    for (def pos = 0; pos < len(code); pos + 1) {
        if IsLetter(code[pos]) {
            def original = pos

            for (IsLetter(code[pos])) {
                pos = pos + 1
            }

            print([VARIABLE, code[original:pos]])
        } else if IsNumber(code[pos]) {
            def original = pos

            for (IsNumber(code[pos])) {
                pos = pos + 1
            }
            
            print([NUMBER, code[original:pos]])
        }
    }
}

